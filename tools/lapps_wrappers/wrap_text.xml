<tool id="wrap.text" name="Wrap input as LIF Text" version="1.0.0">
    <description>Wraps input in a LIF container.</description>
    <command interpreter="lsd">wrap_text.lsd $input $format $output</command>
    <inputs>
        <param name="input" type="data" format="txt"/>
        <param name="format" type="select" label="LIF Format">
            <option value="txt">Text</option>
            <option value="gate">Gate/XML</option>
            <option value="xml">Generic XML</option>
        </param>
    </inputs>
    <outputs>
        <data name="output" format="lif" label="Output"/>
    </outputs>
    <help>Wraps input text in a LIF container.</help>
</tool>
