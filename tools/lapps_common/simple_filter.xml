<tool id='lapps.tools.simple_filter' name='Filter Annotations by type' version='1.0.0'>
    <description>Select views with the specified annotation type.</description>
    <command interpreter='lsd'>filter.lsd $input $output "$type" $pretty</command>
    <inputs>
        <param name='input' type='data' format='json,lif' label='Input'/>
        <param name="type" type="select" label="Annotations">
           <option value="http://vocab.lappsgrid.org/Token">Tokens</option>
           <option value="http://vocab.lappsgrid.org/Token#pos">Tokens+POS</option>
           <option value="http://vocab.lappsgrid.org/Sentence">Sentences</option>
           <option value="http://vocab.lappsgrid.org/NamedEntity">Named Entities</option>
           <option value="http://vocab.lappsgrid.org/NounChunk">Noun Chunks</option>
           <option value="http://vocab.lappsgrid.org/VerbChunk">Verb Chunks</option>
        </param>
        <param name="pretty" type="boolean" label="Pretty print result"/>
    </inputs>
    <outputs>
        <data name='output' format='lif'/>
    </outputs>
    <help>Renames the annotations in the last view in the document.
    </help>
</tool>